<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="96dp" />
            <solid android:color="@color/seekbar_shadow" />
            <stroke android:color="@android:color/transparent" android:width="8dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:layout_width="wrap_content">
            <shape android:shape="rectangle">
                <corners android:radius="96dp" />
                <solid android:color="@color/seekbar_progress" />
                <stroke android:color="@android:color/transparent" android:width="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>
